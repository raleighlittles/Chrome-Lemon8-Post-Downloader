{
    "manifest_version": 3,
    "name": "Instagram Post downloader",
    "description": "Saves the contents of the selected Instagram post.",
    "author": "Raleigh Littles",
    "homepage_url": "https://github.com/raleighlittles/Chrome-Instagram-Post-Downloader",
    "version": "0.2",
    "content_scripts": [
      {
        "matches": [
          "https://www.instagram.com/p/*",
          "https://www.instagram.com/reel/*",
          "https://www.instagram.com/tv/*"
        ],
        "js": ["content.js"]
      }
    ],
    "icons": { "48":  "icons/icon48.png",
              "128":  "icons/icon128.png"},
    "background": {
      "service_worker": "background.js"
    },
    "action": {},
    "permissions": [
      "storage",
      "downloads",
      "tabs"
  ]
}
